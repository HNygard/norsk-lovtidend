              <row>
                <entry colname="1">COLOR HYBRID </entry>
                <entry colname="2">NOK 2397,- pr. døgn </entry>
              </row>
              <row>
                <entry colname="1">COLOR VIKING </entry>
                <entry colname="2">NOK 1823,- pr. døgn </entry>
              </row>
              <row>
