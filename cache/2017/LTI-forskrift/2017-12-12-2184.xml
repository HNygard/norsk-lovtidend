          <colspec colname="2" align="left" valign="top" colwidth="38*"/>
          <tbody>
            <row>
              <entry colname="1">Av de første 470 000 kroner </entry>
              <entry colname="2">intet </entry>
            </row>
            <row>
              <entry colname="1">Av de neste 330 000 kroner </entry>
              <entry colname="2">6 pst. </entry>
