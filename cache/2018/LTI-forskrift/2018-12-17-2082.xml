          <colspec colname="2" align="left" valign="top" colwidth="60*"/>
          <colspec colname="3" align="left" valign="top" colwidth="4*"/>
          <colspec colname="4" align="right" valign="top" colwidth="8*"/>
          <tbody>
            <row>
              <entry colname="1">a) </entry>
              <entry colname="2">Kjøretøy med tillatt totalvekt til og med 3 500 kg </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">610,- </entry>
            </row>
            <row>
              <entry colname="1">b) </entry>
              <entry colname="2">Kjøretøy med tillatt totalvekt fra 3 501 kg til og med 7 500 kg </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">1 070,- </entry>
            </row>
            <row>
              <entry colname="1">c) </entry>
              <entry colname="2">Kjøretøy med tillatt totalvekt over 7 500 kg </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">1 520,- </entry>
            </row>
            <row>
              <entry colname="1">d) </entry>
              <entry colname="2">Kjøretøy under a), etterkontroll </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">380,- </entry>
            </row>
            <row>
              <entry colname="1">e) </entry>
              <entry colname="2">Kjøretøy under b), etterkontroll </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">720,- </entry>
            </row>
            <row>
              <entry colname="1">f) </entry>
              <entry colname="2">Kjøretøy under c), etterkontroll </entry>
              <entry colname="3">Kr </entry>
              <entry colname="4">1 140,- </entry>
            </row>
          </tbody>
        </tgroup>
      </table>
