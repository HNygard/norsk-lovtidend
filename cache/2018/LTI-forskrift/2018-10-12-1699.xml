        <liste id="/kapittel/ii/paragraf/3/ledd/1/liste/c">
          <lverdi>c)</lverdi>
          <avsnitt id="/kapittel/ii/paragraf/3/ledd/1/liste/c/avsnitt/1">
            <i>Tillegg for fagarbeidere:</i>
          </avsnitt>
        </liste>
        <table niv="2" frame="0">
          <tgroup cols="2" rowsep="0" colsep="0">
            <colspec colname="1" align="left" valign="top" colwidth="50*"/>
