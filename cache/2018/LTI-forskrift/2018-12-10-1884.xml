          <tbody>
            <row>
              <entry colname="1">Tetthet </entry>
              <entry colname="2">± 1 kg/m<sup>3</sup> </entry>
              <entry colname="3">± 2 kg/m<sup>3</sup> </entry>
              <entry colname="4">± 5 kg/m<sup>3</sup> </entry>
            </row>
          </tbody>
        </tgroup>
