              </row>
              <row>
                <entry colname="1"><i>2-propanol</i> (67-63-0) </entry>
                <entry colname="2">15 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>n-propanol</i> (71-23-8) </entry>
                <entry colname="2">15 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>Metanol</i> (67-56-1) </entry>
                <entry colname="2">5 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>Metyletylketon</i> (78-93-3) </entry>
                <entry colname="2">2 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>Metylisobutylketon</i> (108-10-1) </entry>
                <entry colname="2">3 volumprosent </entry>
