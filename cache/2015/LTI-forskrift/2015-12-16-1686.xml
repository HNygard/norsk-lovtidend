              <row>
                <entry colname="1"><i>Aceton</i> (67-64-1) </entry>
                <entry colname="2">5 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>t-butanol</i> (75-65-0) </entry>
                <entry colname="2">2 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>Dietylftalat</i> (84-66-2) </entry>
                <entry colname="2">0,7 volumprosent </entry>
              </row>
              <row>
                <entry colname="1"><i>Etylacetat</i> (141-78-6) </entry>
