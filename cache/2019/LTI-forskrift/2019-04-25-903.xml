        <colspec colname="2" align="right" valign="top" colwidth="37*"/>
        <tbody>
          <row>
            <entry colname="1">- Kategori A </entry>
            <entry colname="2">kr 146 040 </entry>
          </row>
          <row>
            <entry colname="1">- Kategori B </entry>
            <entry colname="2">kr 104 040 </entry>
          </row>
          <row>
            <entry colname="1">- Kategori C </entry>
